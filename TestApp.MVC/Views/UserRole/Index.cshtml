@using TestApp.Core.Application.UserRoles.ViewModels;
@model List<UserRoleDto>

    <div class="card">
        <div class="card-header p-2">
            <div class="row">
                <div class="col-8">
                    Kullanıcı Rolleri Listesi
                </div>
                <div class="col-4 text-align-right">
                <a href="/UserRole/Add" class="add-button"><i class="fa-solid fa-plus mr-1"></i>Kullanıcı Rolü Ekle</a>
                </div>
            </div>        
        </div>
        <div class="card-body p-2">
        <table class="table table-hover mt-3">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Kullanıcı</th>
                    <th scope="col">Rol</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.UserName</td>
                        <td>@item.RoleName</td>                       
                        <td class="actions">
                            <a href="/UserRole/Detail/@item.Id" class="detail"><i class="k-icon k-i-align-center"></i></a>
                            @*<a href="/UserRole/Update/@item.Id" class="edit"><i class="k-icon k-i-pencil"></i></a>*@
                            <a onclick='AreYouSureDelete(@item.Id,"/UserRole/Delete")' class="delete"><i class="k-icon k-i-trash"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </div>




