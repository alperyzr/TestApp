@using TestApp.Core.Application.Users.ViewModels;
@model List<UserDto>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">E-Mail</th>
            <th scope="col">Doğum Tarihi</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Email</td>
                <td>@item.BirthDate</td>
                <td class="actions">
                    <a href="/User/Detail/@item.Id" class="detail"><i class="k-icon k-i-align-center"></i></a>
                    <a href="/User/Update/@item.Id" class="edit"><i class="k-icon k-i-pencil"></i></a>
                    <a onclick='AreYouSureDelete(@item.Id,"User/DeleteUser")' class="delete"><i class="k-icon k-i-trash"></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>


