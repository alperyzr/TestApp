@using Kendo.Mvc.UI;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@addTagHelper *, Kendo.Mvc
@{
    var CookieUserKey = HttpContextAccessor.HttpContext.Request.Cookies["UserKey"];
}
<link href="~/css/sidebar.css" rel="stylesheet" />
<div class="sidebar">
  <a class="active" href="#home">Dashboard</a>
  <a href="User/Index">Kullanıcılar</a>
  <a href="Role/Index">Roller</a>
  <a href="UserRole/Index">Kullancı Rolleri</a>
  <a href="UrlShort/Index">Kullancı Urlleri</a>
    <div class="user-area">
        <div class="row">
            <div class="col-12">
                <div class="user-image">
                    <img src="~/img/default-user.png" />
                </div>
            </div>
            <div class="col-12">
                <div class="user-name">                 
                    <div id="megaStore">
                        <kendo-menu orientation="MenuOrientation.Horizontal" name="Menu">
                            <items>
                                <menu-item text="@CookieUserKey">
                                    <sub-items>
                                        <menu-item text="Çıkış Yap" asp-action="LogOut" asp-controller="Login"></menu-item>
                                       
                                    </sub-items>
