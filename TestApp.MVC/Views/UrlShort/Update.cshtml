@using TestApp.Core.Application.UrlShorts.ViewModels;
@model UrlShortDto

<div class="card">
    <div class="card-body">
        <form asp-action="Update" asp-controller="UrlShort" method="post">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="IsActive" />
            <input type="hidden" asp-for="IsDeleted" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="UpdatedDate" />
            <input type="hidden" asp-for="UserId" />
            <input type="hidden" asp-for="ShortUrl" />

            <div class="col-12">
                <div class="row">
                    <div class="col-4">
                        <div class="row">
                            <div class="col-12">
                                <span>Kullanıcı</span>
                            </div>
                            <div class="col-12">
                                <input type="text" asp-for="UserName" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="row">
                            <div class="col-12">
                                <span>Url</span>
                            </div>
                            <div class="col-12">
                                <input class="form-control" asp-for="Url" />

                            </div>
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="row">
                            <div class="col-12">
                                <span>Açıklama</span>
                            </div>
                            <div class="col-12">
                                <input class="form-control" asp-for="Description" />
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-12 text-align-right p-2">
                <button type="submit" class="add-button">Kaydet</button>
            </div>
        </form>

    </div>
</div>
