@using TestApp.Core.Application.UrlShorts.ViewModels;
@model List<UrlShortDto>

<div class="card">
    <div class="card-header p-2">
        <div class="row">
            <div class="col-8">
                Kullanıcılar Listesi
            </div>
            <div class="col-4 text-align-right">
                <a href="/UrlShort/Add" class="add-button"><i class="fa-solid fa-plus mr-1"></i>Kullanıcı Ekle</a>
            </div>
        </div>
    </div>
    <div class="card-body p-2">
        <table class="table table-hover mt-3">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Kullanıcı</th>
                    <th scope="col">Url</th>
                    <th scope="col">Short Url</th>
                    <th scope="col">Açıklama</th>
                    <th scope="col">Eklendiği Tarih</th>
                    <th scope="col">İşlemler</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.UserName</td>
                        <td>@item.Url</td>
                        <td>@item.UrlKey</td>
                        <td>@item.Description</td>
                        <td>@item.CreatedDate</td>
                        <td class="actions">
                            <a href="/UrlShort/Detail/@item.Id" class="detail"><i class="k-icon k-i-align-center"></i></a>
                            <a href="/UrlShort/Update/@item.Id" class="edit"><i class="k-icon k-i-pencil"></i></a>
                            <a onclick='AreYouSureDelete(@item.Id,"/UrlShort/Delete")' class="delete"><i class="k-icon k-i-trash"></i></a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




